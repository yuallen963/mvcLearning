
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Message</title>
</head>
<body>
    <h2>@ViewBag.Message</h2>
    <p>There are @ViewBag.CustomerCount customers added to the list.</p>

    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewBag.customers)
            {
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            }
        </tbody>
    </table>
</body>
</html>
